<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oleksandr.kotyuk.orthodoxcalendarfree"
    android:installLocation="auto">
   <!--   <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
       	<meta-data android:name="android.max_aspect" android:value="2.1" />
        <activity
            android:name="oleksandr.kotyuk.orthodoxcalendarfree.SplashScreen"
            android:launchMode="singleTask"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="oleksandr.kotyuk.orthodoxcalendarfree.MainActivity"
            android:launchMode="singleTask"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="oleksandr.kotyuk.orthodoxcalendarfree.PreferencesActivity"
            android:launchMode="singleTask"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="oleksandr.kotyuk.orthodoxcalendarfree.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="oleksandr.kotyuk.orthodoxcalendarfree.MainActivity" />
        </activity>
        <activity
            android:name="DescriptionActivity"
            android:launchMode="singleTask"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>

        <service
            android:name="oleksandr.kotyuk.orthodoxcalendarfree.widget.MyService"
            android:permission="android.permission.BIND_REMOTEVIEWS" >
        </service>
        <service
            android:name="oleksandr.kotyuk.orthodoxcalendarfree.widget.MyServiceFZ"
            android:permission="android.permission.BIND_REMOTEVIEWS" >
        </service>

        <receiver
            android:name="oleksandr.kotyuk.orthodoxcalendarfree.widget.MyWidget"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_metadata" >
            </meta-data>
        </receiver>
        <receiver
            android:name="oleksandr.kotyuk.orthodoxcalendarfree.widget.MyWidgetFZ"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name_fz" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_fz_metadata" >
            </meta-data>
        </receiver>

        <activity
            android:name="oleksandr.kotyuk.orthodoxcalendarfree.widget.ConfigActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/widget_app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name="oleksandr.kotyuk.orthodoxcalendarfree.widget.ConfigActivityFZ"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/widget_app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <service
            android:name="oleksandr.kotyuk.orthodoxcalendarfree.widget.MyServiceNotifi"
            android:enabled="true"
            android:process=":myservice_notifi" >
        </service>

        <receiver android:name="oleksandr.kotyuk.orthodoxcalendarfree.widget.MyScheduledReceiver" />
        <receiver android:name="oleksandr.kotyuk.orthodoxcalendarfree.widget.NotificationCancel" />
        <receiver
            android:name="oleksandr.kotyuk.orthodoxcalendarfree.widget.AutoStart"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity
            android:name="GospelReadingActivity"
            android:launchMode="singleTask"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
            <intent-filter>
                <data
                    android:host="GospelReadingActivityHostFree"
                    android:scheme="activity-run" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="BibleListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name_bible"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
            
        </activity>
        <activity android:name="BibleReadActivity"
            android:launchMode="singleTask"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name_bible"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
            
        </activity>
        
        <activity android:name="DictionaryTermsListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_dictionary_terms"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
            
        </activity>
        <activity android:name="PsalturActivity"
            android:launchMode="singleTask"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name_psaltur"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
            
        </activity>
        <activity
            android:name="DescriptionHolyActivity"
            android:launchMode="singleTask"
